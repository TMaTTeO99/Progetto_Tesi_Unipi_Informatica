<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/touch_layout"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            >
            <ImageButton
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/favorite"
                android:layout_width="50dp"
                android:layout_height="52dp"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="19dp"
                android:background="@color/cardview_light_background" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_column="2"
                android:layout_row="0"
                android:id="@+id/Button2"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clickable="true"
                app:backgroundTint="#AE2E2727"
                app:srcCompat="@drawable/ic_delete"

                />


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:rowCount="2"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_row="0"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:id="@+id/textNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification OFF" />
                </LinearLayout>


                <GridLayout
                    android:layout_marginTop="5dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:columnCount="3"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_column="0"
                        android:layout_gravity=""
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:layout_width="90dp"
                        >

                        <TextView
                            android:id="@+id/titleRead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:text="Channels Lettura:"
                            />
                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleText_2"
                            android:textSize="15sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_column="1"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        >
                        <View
                            android:layout_column="1"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_column="2"
                        android:layout_marginLeft="10dp"
                        >

                        <TextView

                            android:id="@+id/titleWrite"
                            android:layout_column="2"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:text="Channel Scrittura:"
                             android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_column="2"
                            android:id="@+id/titleText_3"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>





                </GridLayout>

            </GridLayout>



        </GridLayout>


